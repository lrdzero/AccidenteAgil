<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Implicado"
    tools:showIn="@layout/activity_datos_iniciales">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombreImplicado"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dniImplicado"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/nombreImplicado"
        android:layout_alignStart="@+id/nombreImplicado"
        android:layout_alignRight="@+id/nombreImplicado"
        android:layout_alignEnd="@+id/nombreImplicado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre del implicado"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/nombreImplicado"
        android:layout_alignLeft="@+id/nombreImplicado"
        android:layout_alignStart="@+id/nombreImplicado"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DNI del implicado"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/dniImplicado"
        android:layout_alignStart="@+id/dniImplicado" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/continuarButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73dp"
        android:layout_alignLeft="@+id/dniImplicado"
        android:layout_alignStart="@+id/dniImplicado"
        android:layout_alignRight="@+id/dniImplicado"
        android:layout_alignEnd="@+id/dniImplicado" />
</RelativeLayout>
