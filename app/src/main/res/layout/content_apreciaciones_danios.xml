<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RecopilacionDatos.ApreciacionesDanios"
    tools:showIn="@layout/activity_apreciaciones_danios">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Daños Apreciados"
            android:id="@+id/textView21"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/daniosApreciados"
            android:layout_weight="0.15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Observaciones"
            android:id="@+id/textView22"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/observaciones"
            android:layout_weight="0.15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Puntos de Choque"
            android:id="@+id/textView23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fotografie laterales, frontal y parte trasera del vehículo"
            android:id="@+id/textView24"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:id="@+id/picturesCrashA"
                android:src="@drawable/carcrash"
                android:adjustViewBounds="true"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:id="@+id/picturesCrashB"
                android:adjustViewBounds="true"
                android:src="@drawable/carcrash"
                android:layout_marginLeft="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07">

            <ImageView
                android:layout_width="116dp"
                android:layout_height="52dp"
                android:id="@+id/actualPictureA"
                android:layout_marginLeft="30dp" />

            <ImageView
                android:layout_width="116dp"
                android:layout_height="54dp"
                android:id="@+id/actualPictureB"
                android:adjustViewBounds="true"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="73dp"
                android:id="@+id/imageBack"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/back"
                android:adjustViewBounds="true"
                android:nestedScrollingEnabled="true" />

            <ImageView
                android:layout_width="82dp"
                android:layout_height="73dp"
                android:id="@+id/imageNext"
                android:src="@drawable/next"
                android:minHeight="82dp"
                android:minWidth="73dp"
                android:layout_marginLeft="160dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
